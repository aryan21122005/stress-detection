{
  "manifest_version": 3,
  "name": "Stress Monitor Overlay",
  "version": "0.1.0",
  "description": "Overlay live stress/attention metrics during meetings using local inference.",
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "http://127.0.0.1:5001/*",
    "http://localhost:5001/*",
    "<all_urls>"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ]
}
